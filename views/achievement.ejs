<script>
function getAreaByKanwil(){
    var kanwil = $('#kanwil').val()
    $.ajax({
        cache: true,
        url: "<%= baseurl() %>acv/areabykanwil/"+kanwil,
        success: function(select){
            $('#area').html(select);
        }
    })
}
$(document).ready(function(){
    $(".control").submit(function(){
        var kanwil = $('#kanwil').val()
        var area = $('#area').val()
        var Date = $('#setDate').val()
        var valEndDate = $("#endDate").val()
        if(Date==""){
            var startDate = "all"
            var endDate = "all"
        }else{
            var startDate = Date
            var endDate = valEndDate
        }
        var data = "kanwil="+kanwil+"&date="+startDate+"&endDate="+endDate+"&area="+area
        alert(data)
        $.ajax({
            url: "<%= baseurl() %>acv/content/",
            type: "GET",
            data: data,
            cache: false,
            beforeSend: function(loading){
                $('.loader').show()
            },success: function(schedule){
                $('.loader').hide()
                $('.contentajax').html(schedule)
            }
        })
        return false;
    })
})
</script>
